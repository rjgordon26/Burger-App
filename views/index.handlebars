<div class="container bg">

	<div class="row">
	    <div class="center col-sm-12">
			<img src="assets/img/burger.jpg" alt="Burger">
	        <h1>Burger App</h1>
	        <p></p>
	    </div>
  	</div>

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers Available To Devour!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="button-primary" type="submit">Devour!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers That Have Been Devoured!</h2>
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
	    </div>

  	</div>
	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger</h2>

			<form class="create-update-form" action="/" method="POST">
			  <div class="form-group">
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  <button class="button-primary" type="submit">Submit Burger</button>
			</form>
	    </div>
  	</div>
</div>